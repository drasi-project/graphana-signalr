{
  "name": "drasi-signalr-datasource",
  "version": "0.1.0-alpha",
  "description": "Grafana data source plugin for streaming Drasi SignalR changes",
  "scripts": {
    "build": "webpack -c ./.config/webpack/webpack.config.js --env production",
    "dev": "webpack -w -c ./.config/webpack/webpack.config.js --env development",
    "test": "jest --watch --onlyChanged",
    "test:ci": "jest --passWithNoTests --maxWorkers 4",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --cache --ignore-path ./.gitignore --ext .js,.jsx,.ts,.tsx .",
    "lint:fix": "npm run lint -- --fix",
    "e2e": "npm exec playwright test",
    "e2e:update": "npm exec playwright test --update-snapshots",
    "server": "docker-compose up --build",
    "sign": "npx --yes @grafana/sign-plugin@latest"
  },
  "author": "Drasi Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "@grafana/eslint-config": "^7.0.0",
    "@grafana/tsconfig": "^1.3.0-rc1",
    "@swc/core": "^1.3.90",
    "@swc/helpers": "^0.5.0",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.8.7",
    "@types/webpack-livereload-plugin": "^2.3.6",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint-webpack-plugin": "^4.0.1",
    "fork-ts-checker-webpack-plugin": "^8.0.0",
    "glob": "^10.3.10",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^3.0.3",
    "replace-in-file-webpack-plugin": "^1.0.6",
    "sass": "1.69.5",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "swc-loader": "^0.2.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2",
    "webpack-livereload-plugin": "^3.0.2"
  },
  "dependencies": {
    "@drasi/signalr-react": "^0.1.0-alpha",
    "@grafana/data": "^10.0.0",
    "@grafana/runtime": "^10.0.0",
    "@grafana/ui": "^10.0.0",
    "@microsoft/signalr": "^8.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rxjs": "^7.8.2"
  },
  "engines": {
    "node": ">=20"
  }
}
